@model TechJobsPersistent.ViewModels.AddJobViewModel 

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Job Name</label>
        <input class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="EmployerId">Employers</label>
        <select asp-for="EmployerId" asp-items="Model.AllEmployers"></select>
        <a asp-controler="Employer" asp-action="Add">Add New Employer</a>
    </div>

    <br />



    <input type="submit" value="Add Job" />
</form>

